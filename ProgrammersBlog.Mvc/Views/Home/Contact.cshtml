
@model ProgrammersBlog.Entities.Dtos.EmailSendDto
@{
    Layout = "_ContactLayout";
    ViewBag.Title = "İletişim";
    ViewBag.Author = "Programmers Blog";
    ViewBag.Description = "Bizlerle iletişime geçin!";
    ViewBag.Tags = "Contact,Contact Us";

}


<div class="container contact-form">
    <div class="contact-image">
        <img src="https://image.ibb.co/kUagtU/rocket_contact.png" alt="rocket_contact" />
    </div>
    <form asp-controller="Home" asp-action="Contact" method="post">
        <h3>Bizlere bir mesaj bırakın.</h3>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <input type="text" class="form-control" required placeholder="İsminiz *" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="email" class="form-control" required placeholder="E-Posta Adresiniz *" asp-for="Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" required placeholder="Konu / Başlık *" asp-for="Subject" />
                    <span asp-validation-for="Subject" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btnContact">Gönder</button>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <textarea class="form-control" required placeholder="Mesajınız... *" asp-for="Message" style="width: 100%; height: 150px;"></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>
            </div>
        </div>
    </form>
</div>