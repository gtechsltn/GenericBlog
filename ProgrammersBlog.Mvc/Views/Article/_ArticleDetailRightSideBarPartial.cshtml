@model ProgrammersBlog.Mvc.Models.ArticleDetailRightSideBarViewModel

<div class="col-md-3">

    <div class="card my-4">
        <img src="~/img/@Model.User.Picture" class="card-img-top text-center image-thumbnail mt-1 mb-1" alt="@Model.User.UserName" />
        <h5 class="card-header align-content-center" style="font-family:Tahoma; text-align:center;">@Model.User.UserName</h5>
        <div class="card-body">
            <p class="card-text text-center">@Model.User.About</p>
            @if (Model.User.InstagramLink != null || Model.User.TwitterLink != null
            || Model.User.GitHubLink != null || Model.User.YoutubeLink != null
            || Model.User.FacebookLink != null || Model.User.WebsiteLink != null
            || Model.User.LinkedInLink != null)
            {
                <div class="card-footer text-center">
                    <p>Sosyal Medya Linkleri</p>
                    @if (Model.User.LinkedInLink != null)
                    {
                        <a href="@Model.User.LinkedInLink" target="_blank"><span class="fa-linkedin"></span></a>
                    }
                    @if (Model.User.GitHubLink != null)
                    {
                        <a href="@Model.User.GitHubLink" target="_blank"><span class="fab fa-github-square"></span></a>
                    }
                    @if (Model.User.TwitterLink != null)
                    {
                        <a href="@Model.User.TwitterLink" target="_blank"><span class="fab fa-twitter-square"></span></a>
                    }
                    @if (Model.User.FacebookLink != null)
                    {
                        <a href="@Model.User.FacebookLink" target="_blank"><span class="fab fa-facebook-square"></span></a>
                    }
                    @if (Model.User.InstagramLink != null)
                    {
                        <a href="@Model.User.InstagramLink" target="_blank"><span class="fab fa-instagram-square"></span></a>
                    }
                    @if (Model.User.YoutubeLink != null)
                    {
                        <a href="@Model.User.YoutubeLink" target="_blank"><span class="fab fa-youtube-square"></span></a>
                    }
                    @if (Model.User.WebsiteLink != null)
                    {
                        <a href="@Model.User.WebsiteLink" target="_blank"><span class="fas fa-home"></span></a>
                    }
                </div>
            }

        </div>
    </div>

    <!-- Side Widget -->
    <div class="card my-4">
        <h5 class="card-header" style="font-family:Tahoma;">@Model.Header</h5>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="list-group">
                        @for (int i = 0; i < Model.ArticleListDto.Articles.Count; i++)
                        {
                            if (i % 2 == 0)
                            {
                                <li class="list-group-item list-group-item-primary">
                                    <a asp-controller="Article" asp-action="Detail" asp-route-articleId="@Model.ArticleListDto.Articles[i].Id">@Model.ArticleListDto.Articles[i].Title</a>
                                </li>
                            }
                            else
                            {
                                <li class="list-group-item list-group-item-info">
                                    <a asp-controller="Article" asp-action="Detail" asp-route-articleId="@Model.ArticleListDto.Articles[i].Id">@Model.ArticleListDto.Articles[i].Title</a>
                                </li>
                            }
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
